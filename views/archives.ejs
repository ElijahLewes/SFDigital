<% layout('layout') -%>
<% set('title', 'Archives') %>

<section class="page-header">
  <div class="container">
    <h1>Content Archives</h1>
    <p>Browse all our neighborhood interviews and history articles</p>
  </div>
</section>

<section class="archives-content">
  <div class="container">
    <div class="filters">
      <div class="filter-group">
        <label for="content-type">Filter by:</label>
        <select id="content-type">
          <option value="all">All Content</option>
          <option value="interview">Interviews</option>
          <option value="article">Articles</option>
        </select>
      </div>
      <div class="filter-group">
        <label for="neighborhood">Neighborhood:</label>
        <select id="neighborhood">
          <option value="all">All Neighborhoods</option>
          <option value="little-havana">Little Havana</option>
          <option value="harlem">Harlem</option>
          <option value="chinatown">Chinatown SF</option>
        </select>
      </div>
    </div>
    
    <div class="archives-grid">
      <% allContent.forEach(item => { %>
        <div class="archive-item" data-type="<%= item.type %>">
          <h3><%= item.title %></h3>
          <p class="meta"><%= item.neighborhood %> â€¢ <%= item.date %></p>
          <p class="type-badge"><%= item.type === 'interview' ? 'Interview' : 'Article' %></p>
          <a href="#" class="btn btn-small">View</a>
        </div>
      <% }); %>
    </div>
  </div>
</section>