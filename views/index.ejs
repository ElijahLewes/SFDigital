<% layout('layout') -%>
<% set('title', 'Home') %>

<section class="hero">
  <div class="container">
    <h2>Amplifying Neighborhood Voices</h2>
    <p>Documenting community stories and preserving local history through interviews and multimedia journalism.</p>
    <a href="/archives" class="btn">Explore Our Archives</a>
  </div>
</section>

<section class="recent-content">
  <div class="container">
    <h2>Recent Stories</h2>
    <div class="content-grid">
      <% recentContent.forEach(item => { %>
        <div class="content-card">
          <div class="card-image" style="background-image: url('/images/<%= item.image %>')"></div>
          <div class="card-content">
            <span class="content-type"><%= item.type === 'interview' ? 'Interview' : 'Article' %></span>
            <h3><%= item.title %></h3>
            <p class="neighborhood"><%= item.neighborhood %></p>
            <p class="excerpt"><%= item.excerpt %></p>
            <p class="date"><%= item.date %></p>
            <a href="#" class="read-more">Read More</a>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</section>

<section class="services-cta">
  <div class="container">
    <div class="services-content">
      <h2>Consulting Services</h2>
      <p>We offer consulting services for organizations looking to document their community histories or create multimedia projects about their neighborhoods.</p>
      <a href="/contact" class="btn btn-outline">Learn More</a>
    </div>
  </div>
</section>